{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": [
    "api/**/*",
    "src/**/*",
    "pages/**/*",
    "lib/**/*",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", ".next", "dist"]
}
